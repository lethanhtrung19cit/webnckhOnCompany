
@model DuAnQLNCKH.Models.Account

@{ ViewBag.Title = "Sửa tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
 }


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh Sửa Tài Khoản Đăng Nhập Hệ Thống</h6>
    </div>

    <div class="table-responsive">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
            @using (Html.BeginForm("Update", "Admin", FormMethod.Post))
            {
                 
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Email Đăng Nhập</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                           <input type="hidden" name="email" value="@Model.Email"/>
                         </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Quyền Truy Cập</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Access, ViewBag.Access as SelectList, new { @class = "form-control", @disabled = "true" }).<input type="hidden" name="email" value="@Model.Email" />
                            <input type="hidden" name="Access" value="@Model.Access" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Trạng Thái Hoạt Động</label>                            
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Status, ViewBag.Status as SelectList, new { @class = "form-control"  })
                         </div>
                    </div>
                     

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-facebook" />
                               
                        </div>

                    </div>

                
                }

        </div>
    </div>

</div>

<div>
    <a href="@Url.Action("Index","Admin")"><< Quay lại danh sách</a>
</div>



