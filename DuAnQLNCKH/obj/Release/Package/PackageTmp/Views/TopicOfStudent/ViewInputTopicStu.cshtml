
@{
    ViewBag.Title = "Nhập thông tin đề tài sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DuAnQLNCKH.Models.TopicOfStudent

<h2>Nhập Thông Tin Công Trình Sinh Viên</h2>

@using (Html.BeginForm("InputTopicStu", "TopicOfStudent", FormMethod.Post))
{

    <div class="form-group">
        <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">Tên Công Trình</div>
        <div>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên công trình" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">Loại công trình</div>
        <div>
            @Html.DropDownListFor(model => model.Type, (IEnumerable<SelectListItem>)ViewBag.listTypeTopic, "--Lựa chọn loại công trình sinh viên--", new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">Sinh Viên Thực Hiện</div>
        <div>
            @Html.EditorFor(model => model.NameSt, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sinh viên thực hiện" } })
            @Html.ValidationMessageFor(model => model.NameSt, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">Người Hướng Dẫn</div>
        <div>
            @Html.EditorFor(model => model.LectureIntruc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên giảng viên hướng dẫn" } })
            @Html.ValidationMessageFor(model => model.LectureIntruc, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">Loại chuyên ngành</div>
        <div>
            @Html.DropDownListFor(model => model.IdSu, ViewBag.listSu as SelectList, "--Lựa chọn loại chuyên ngành--", new { @class = "form-control" })

        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">
                Ngày Thực Hiện
            </div>
            <div>

                @Html.EditorFor(model => model.DateSt, new { htmlAttributes = new { @Value = "2021-06-23", @class = "form-control", @type = "date", } })
                @Html.ValidationMessageFor(model => model.DateSt, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <div style="color:black; font-weight:bold; font-family:'Times New Roman'; font-size:20px">Nhập Điểm</div>
                <div>
                    <input type="number" step="0.1" name="Point" class="form-control" style="width:100px" />

                </div>
            </div>
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Lưu" />
    </div>

}

